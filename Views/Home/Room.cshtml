            var isValid = true;
            if (!message) {
                isValid = false;
            }

            if (isValid) {

                $.post("/home/room", { message }, function (data) {
                    if (!data.success) {
                        // small div says error to send msg
                        console.log("error to send msg")

                    } else {
                        console.log("error to msg server")
                    }
                })
            }

            return false;
        })
    })
</script>